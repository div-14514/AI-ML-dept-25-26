#task 3 treasure hunt game
import random
map = ["_", "_", "_", "_", "_"]
treasure = random.randint(0, 4)
found = False

print('''Welcome to the Treasure Hunt Game!
      Try to find the treasure hidden in one of the 5 spots.''')


while not found:
    guess = int(input("Guess the position (1-5): ")) - 1
    if guess == treasure:
        map[guess] = "X"  
        found = True
        print("You found the treasure")
    else:
        if guess < treasure:
            print("Too left")
        else:
            print("Too right")
        map[guess] = "O"  
    print("Current map:", map)
